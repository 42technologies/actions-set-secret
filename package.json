{
  "name": "secret-updater",
  "version": "2.0.1",
  "repository": "https://github.com/hmanzur/actions-set-secret",
  "license": "MIT License",
  "scripts": {
    "lint": "eslint ."
  },
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^4.0.0",
    "@octokit/core": "^3.1.2",
    "eslint": "^7.6.0",
    "tweetsodium": "0.0.5"
  },
  "devDependencies": {
    "eslint-config-strongloop": "^2.1.0",
    "eslint-plugin-jsdoc": "^30.2.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "npm i"
    }
  },
  "lint-staged": {
    "*/*.js": [
      "eslint . --fix",
      "rm -rf node_modules",
      "rm -rf dist",
      "npm i -only=prod",
      "ncc build index.js -o dist/index.js"
    ]
  }
}
